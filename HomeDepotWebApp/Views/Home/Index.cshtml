@model HomeDepotWebApp.Models.Customer

<div class="container">
    <div class="jumbotron"  >
        <h2 style="text-align:center">Login</h2>
        <div style="text-align:center; margin-left:40%;margin-right:40%;">
                
            @using (Html.BeginForm()) {
                @Html.LabelFor(model => model.Username)
                
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @style = " margin-bottom:10px"} })
                
                @Html.LabelFor(model => model.Password)
                
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" , @style = " margin-bottom:10px"} })
                
                <input type="submit" value="Login" class="btn btn-success btn-lg">
            }
            
        </div>
    </div>
</div>